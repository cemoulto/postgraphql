{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "index.js",
    "node_modules",
    "build",
    "examples",
    "utils"
  ]
}
